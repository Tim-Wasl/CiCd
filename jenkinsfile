pipeline {
  agent any

  environment {
    JAVA_HOME = 'C:/Users/wasl/jdk11'
 } 

  tools {
    jdk 'openjdk-11'
  }

  stages {
    stage('Build') {
      steps {
        withGradle
        bat "./gradlew bootrun"
      }
    }
    stage('Quality Check') {
      steps {
        bat './gradlew build'
      }
    }
  }
}