pipeline {
  agent any

  environment {
    JAVA_HOME = 'C:/Users/wasl/jdk11'
 } 

  tools {
    jdk 'openjdk-11'
  }

  stages {
    stage('Build') {
      steps {
        bat "./gradlew bootrun"
      }
    }
    stage('Quality Check') {
      steps {
        bat './gradlew build'
      }
    }
    stage('Sonarqube') {
    environment {
        scannerHome = tool 'sonar'
    }
    steps {
        withSonarQubeEnv('SOnarqube') {
            bat "${scannerHome}/bin/sonar-scanner"
        }
        timeout(time: 10, unit: 'MINUTES') {
            waitForQualityGate abortPipeline: true
        }
    }
}
  }
}